<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="120dp"  
    android:layout_height="wrap_content"  
    android:background="#FFAEB9" >  
  
    <ImageView  
        android:id="@+id/id_index_gallery_item_image"  
        android:layout_width="80dp"  
        android:layout_height="80dp"  
        android:layout_alignParentTop="true"  
        android:layout_centerHorizontal="true"  
        android:layout_margin="5dp"  
        android:scaleType="centerCrop" />  
  
    <TextView  
        android:id="@+id/fragment1_receyview_item_shop_name_text"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_below="@id/id_index_gallery_item_image"  
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="3dp"  
        android:layout_marginTop="3dp"  
        android:textColor="#ff0000"  
        android:text="商品名称"  
        android:textSize="10dp" />

    <TextView
        android:id="@+id/fragment1_receyview_item_shop_price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/fragment1_receyview_item_shop_name_text"
        android:textSize="8dp"  
        android:text="$120.00" />

    <TextView
        android:id="@+id/fragment1_receyview_item_shop_price1_text"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
      
        android:layout_marginLeft="15dp"
        android:textSize="8dp"
        android:layout_below="@id/fragment1_receyview_item_shop_name_text"
        android:layout_toRightOf="@id/fragment1_receyview_item_shop_price_text"
        android:text="$360.00" />
  
</RelativeLayout>